<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".ListViewAnimations" >
	
        <com.example.android.animationsdemo.DynamicListView
            android:id="@+id/listview"
            android:background="#212121"
            android:divider="#424242"
    		android:dividerHeight="1px"
    		android:layout_marginTop="125px"
            android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
        
		
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5px"
            android:layout_marginBottom = "3px"
            android:text="Hold and drag the libraries in the order you want them to appear"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="23dp" />
        
        <TextView         
              android:layout_below="@id/textView1" 
		      android:layout_width="fill_parent" 
		      android:layout_height="2px" 
		      android:background="#424242" />

</RelativeLayout>
